<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_home_notification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_home_trackbuddy_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_arrow_tb"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_arrow_drop_up" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginLeft="@dimen/paddinghalf"
            android:layout_marginRight="@dimen/paddinghalf"
            android:layout_marginTop="20dp"
            android:background="@color/listBackground"
            android:elevation="5dp" >

            <TextView
                android:id="@+id/txt_trackbuddy_header"
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/paddingQuarter"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:text="@string/header_home_notification_trackbuddy" />


            <ListView
                android:id="@+id/home_trackbuddy_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_trackbuddy_header"
                android:divider="@drawable/home_list_divider"
                android:dividerHeight="1dp"
                android:paddingBottom="@dimen/paddinghalf" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_sharemylocation_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_arrow_sml"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_arrow_drop_up" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginLeft="@dimen/paddinghalf"
            android:layout_marginRight="@dimen/paddinghalf"
            android:layout_marginTop="20dp"
            android:background="@color/listBackground"
            android:elevation="5dp" >

            <TextView
                android:id="@+id/txt_sharemylocation_header"
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/paddingQuarter"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:text="@string/header_home_notification_sharemylocation" />



            <ListView
                android:id="@+id/home_sharemylocation_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sharemylocation_header"
                android:divider="@drawable/home_list_divider"
                android:dividerHeight="1dp"
                android:paddingBottom="@dimen/paddinghalf" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_pending_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_arrow_pe"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_arrow_drop_up" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginLeft="@dimen/paddinghalf"
            android:layout_marginRight="@dimen/paddinghalf"
            android:layout_marginTop="20dp"
            android:background="@color/listBackground"
            android:elevation="5dp" >

            <TextView
                android:id="@+id/txt_pending_events_header"
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/paddingQuarter"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:text="@string/header_home_notification_pendingevents" />

            <ListView
                android:id="@+id/home_pending_event_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pending_events_header"
                android:divider="@drawable/home_list_divider"
                android:dividerHeight="1dp"
                android:paddingBottom="@dimen/paddinghalf" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_running_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_arrow_re"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_arrow_drop_up" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginLeft="@dimen/paddinghalf"
            android:layout_marginRight="@dimen/paddinghalf"
            android:layout_marginTop="20dp"
            android:background="@color/listBackground"
            android:elevation="5dp" >

            <TextView
                android:id="@+id/txt_running_events_header"
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/paddingQuarter"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:text="@string/header_home_notification_runningevents" />

            <ListView
                android:id="@+id/home_running_event_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_running_events_header"
                android:divider="@drawable/home_list_divider"
                android:dividerHeight="1dp"
                android:paddingBottom="@dimen/paddinghalf" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>